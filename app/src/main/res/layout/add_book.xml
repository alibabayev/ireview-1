<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/BookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/BookLoadCoverPhotoButton"
        android:ems="12"
        android:hint="Name"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/BookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BookName"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/BookLoadCoverPhotoButton"
        android:ems="12"
        android:hint="Author"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/BookGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BookAuthor"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/BookLoadCoverPhotoButton"
        android:ems="12"
        android:hint="Genre"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/first_star"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_below="@+id/BookLoadImageButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/star_icon" />

    <ImageView
        android:id="@+id/second_star"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_below="@+id/BookLoadImageButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/first_star"
        android:background="@drawable/star_icon" />

    <ImageView
        android:id="@+id/third_star"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_below="@+id/BookLoadImageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/second_star"
        android:background="@drawable/star_icon" />

    <ImageView
        android:id="@+id/fourth_star"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_below="@+id/BookLoadImageButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/third_star"
        android:background="@drawable/star_icon" />

    <ImageView
        android:id="@+id/fifth_star"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_below="@+id/BookLoadImageButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/fourth_star"
        android:background="@drawable/star_icon" />

    <CheckBox
        android:id="@+id/post_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BookGenre"
        android:layout_toRightOf="@id/BookLoadCoverPhotoButton"
        android:text="Post Review"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/BookReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/third_star"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:minLines="3"
        android:maxLines="3"
        android:gravity="top|left"
        android:textSize="15dp"
        android:ems="20"
        android:hint="Your Review"
        android:singleLine="false"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/BookAddButton"
        android:layout_below="@+id/BookReview"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="addBook"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:text="Add Book" />

    <ImageView
        android:id="@+id/BookCoverPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/book"></ImageView>

    <Button
        android:id="@+id/BookLoadCoverPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/BookCoverPhoto"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:layout_weight="0"
        android:text="Import Cover Photo"></Button>

    <ImageView
        android:id="@+id/BookReadingImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/BookLoadCoverPhotoButton"
        android:layout_weight="1"
        android:background="@drawable/r_book"></ImageView>

    <Button
        android:id="@+id/BookLoadImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:textSize="15dp"
        android:onClick="importBookReadingImage"
        android:layout_below="@+id/BookReadingImage"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:layout_weight="0"
        android:text="Import Image"></Button>

    <Button
        android:id="@+id/BookSaveEditButton"
        android:layout_below="@+id/BookReview"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="saveEditBookButton"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:clickable="false"
        android:enabled="false"
        android:text="Save Changes"/>

</RelativeLayout>